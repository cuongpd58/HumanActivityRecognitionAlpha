<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingLeft="@dimen/padding_between_text_and_body_dialog"
    android:layout_height="@dimen/item_height">
    <ImageView
        android:layout_width="@dimen/item_height"
        android:background="@drawable/ic_account_circle_black"
        android:id="@+id/iv_account_item"
        android:layout_marginRight="@dimen/pading"
        android:layout_height="@dimen/item_height" />
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/tv_name_in_user_item"
        android:textColor="@android:color/black"
        android:textSize="@dimen/normal_text_size"
        android:layout_toRightOf="@id/iv_account_item"
        android:gravity="center_vertical"
        android:text="userame"
        android:background="?android:attr/selectableItemBackground"
        android:layout_height="@dimen/item_height" />
</RelativeLayout>