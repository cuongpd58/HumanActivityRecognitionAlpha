<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.uet.humanactivityrecognition.activities.MainActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/tv_enter_name"
                android:text="User name:"
                android:layout_column="1"
                android:textColor="@android:color/background_dark"
                android:layout_height="@dimen/min_height" />
            <EditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/edt_enter_name"
                android:layout_column="2"
                android:layout_height="wrap_content" />
        </TableRow>
        <TableRow>
            <TextView
                android:text="Sex:"
                android:id="@+id/tv_sex"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/min_height"/>
            <Spinner
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/sp_sex"
                android:layout_height="@dimen/min_height">
            </Spinner>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/min_height"
                android:text="Age:"
                android:id="@+id/tv_age"/>
            <EditText
                android:layout_weight="1"
                android:layout_width="0dp"
                android:id="@+id/edt_age"
                android:layout_height="@dimen/min_height"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/tv_job"
                android:text="Job:"
                android:layout_height="@dimen/min_height"/>
            <EditText
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="@dimen/min_height"
                android:id="@+id/edt_job"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Sensor: "
                android:layout_height="@dimen/min_height"
                android:id="@+id/tv_sensor"/>
            <Spinner
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="@dimen/min_height"
                android:id="@+id/sp_sensors">
            </Spinner>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:text="Activity:"
                android:layout_height="@dimen/min_height"
                android:id="@+id/tv_select_activity"/>
            <Spinner
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/sp_activities"
                android:layout_height="@dimen/min_height">
            </Spinner>
        </TableRow>

        <TableRow>
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="@dimen/min_height"
                android:id="@+id/tv_mode"
                android:text="Mode:"/>
            <Spinner
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/min_height"
                android:id="@+id/sp_mode">
            </Spinner>
        </TableRow>
    </TableLayout>

    <ToggleButton
        android:layout_width="wrap_content"
        android:id="@+id/tgbtn_start_stop"
        android:layout_height="wrap_content" />

</LinearLayout>
